@model dynamic

@{    
    Layout = "~/Areas/mvc/Views/Shared/_LayoutLogin.cshtml";
}

<form id="forgotpassword-form" method="post" accept-charset="utf-8">
    <input type="text" name="username" placeholder="User Name" autofocus>
    <div id="user_name_error" class="errorMessage"></div>   
    <div class="submit-div">
        <input type="submit" name="submit" value="Submit" class="button btn login-btn">
        <a href="login" class="helper-text">Back to login page</a>
    </div>
</form>

