<?xml version="1.0" encoding="utf-8" ?>
<configuration>


  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="logfile-DeployScriptApplication.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="500KB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>
    <logger name="DeployScriptApplicationLogger">
      <appender-ref ref="RollingFileAppender"/>
    </logger>
    <root>
      <level value="INFO"/>
    </root>
  </log4net>
  <appSettings>
    <add key="LogFilePath" value="D:\Projects\DeployScriptsApplication\Log.txt"/>
    <add key="connectionStringCore" value="Data Source=SQLDEV01; Initial Catalog=SkyStemARTCore; uid=sa;pwd=skystem@123; Trusted_Connection=false;Connect Timeout=600;" />
    <add key="connectionStringSpecific" value="Data Source={0}; Initial Catalog={1}; uid={2};pwd={3};Connect Timeout=120;" />
    <add key="DBBackupPath" value="D:\DatabaseBackups\Temp\Dev\" />
    <add key="BaseFolderForScriptFiles" value="D:\DatabaseScripts\" />
    <add key="DBCommandTimeOut" value ="300"/>

  </appSettings>

</configuration>